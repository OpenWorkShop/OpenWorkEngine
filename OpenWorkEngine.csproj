  <ItemGroup>
    <Compile Remove="OpenController\obj\**" />
    <Compile Remove="OpenController\bin\**" />
    <Compile Remove="npm-packages\ui\dist\**" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Remove="OpenController\obj\**" />
    <EmbeddedResource Remove="OpenController\bin\**" />
