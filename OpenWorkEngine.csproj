<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <PackageRoot>npm-packages\</PackageRoot>
    <Nullable>enable</Nullable>
    <Company>OpenWorkShop</Company>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="HotChocolate.AspNetCore" Version="11.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="Serilog.Enrichers.Thread" Version="3.2.0-dev-00747" />
    <PackageReference Include="Serilog.Sinks.Console" Version="4.0.0-dev-00839" />
    <PackageReference Include="System.IO.Ports" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Content Remove="$(PackageRoot)**" />
    <None Remove="$(PackageRoot)**" />
    <None Include="$(PackageRoot)**" Exclude="$(PackageRoot)*\node_modules\**;$(PackageRoot)\*\dist\**;OpenController\bin\**;OpenController\obj\**" />
    <None Remove="$(PackageRoot)\*\dist\**" />
    <Content Remove="OpenController\bin\**" />
    <Content Remove="OpenController\obj\**" />
    <Content Remove="$(PackageRoot)\*\dist\**" />
    <None Remove="OpenController\obj\**" />
    <None Remove="OpenController\bin\**" />
    <None Remove="npm-packages\ui\dist\**" />
  </ItemGroup>

  <ItemGroup>
