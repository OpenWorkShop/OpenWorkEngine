// `tsconfig.json` for react native TypeScript package
//"declarationDir": "./dist",
{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "strict": true,
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react"
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "../lib"
    }
  ],
  "exclude": ["node_modules"]
}
