{
  "private": true,
  "scripts": {
    "graphql-lib": "yarn graphql-codegen --watch",
    "lib": "cd npm-packages/lib && tsc -b -w",
    "ui": "cd npm-packages/ui && tsc -b -w",
    "ows": "cd OpenWorkShop/App && yarn run start",
    "graphql-makerverse": "cd Makerverse/App && yarn graphql-codegen --watch",
    "mv": "cd Makerverse/App && yarn run dev",
    "makerverse": "concurrently \"yarn run graphql-makerverse\" \"yarn run mv\"",
    "dev": "concurrently \"yarn run graphql-lib\" \"yarn run lib\" \"yarn run ui\"",
    "all": "concurrently \"yarn run graphql-lib\" \"yarn run graphql-makerverse\" \"yarn run lib\" \"yarn run ui\" \"yarn run oc\" \"yarn run ows\" \"yarn run mv\""
  },
  "resolutions": {
    "nib/stylus": "0.54.8",
    "@material-ui/core": "5.0.0-alpha.17",
    "@material-ui/lab": "5.0.0-alpha.17",
    "react": "17.0.0",
    "react-dom": "17.0.0",
    "react-router": "5.2.0",
    "react-router-dom": "5.2.0",
    "@emotion/react": "^11.0.0",
    "@emotion/styled": "^11.0.0"
  },
  "workspaces": [
    "./npm-packages/lib/dist",
    "./npm-packages/ui/dist",
    "./OpenWorkShop/App",
    "./makerverse/server",
    "./makerverse/app"
  ],
  "devDependencies": {
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1"
  }
}
