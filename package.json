{
  "private": true,
  "scripts": {
    "graphql": "yarn graphql-codegen --watch",
    "lib": "cd OpenWorkEngine/npm-packages/lib && tsc -b -w",
    "ui": "cd OpenWorkEngine/npm-packages/ui && tsc -b -w",
    "oc": "cd OpenWorkEngine/npm-packages/open-controller && tsc -b -w",
    "dev": "concurrently --kill-others-on-fail \"yarn run graphql\" \"yarn run lib\" \"yarn run ui\" \"yarn run oc\""
  },
  "devDependencies": {
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "imagemin-lint-staged": "^0.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{png,jpeg,jpg,gif,svg}": "imagemin-lint-staged",
    "./npm-packages/*/src/*.{js,jsx,ts,tsx,md,html,css}": "prettier --write",
    "./npm-packages/*/src/*.{js,jsx,ts,tsx}": "eslint --fix"
  }
}
